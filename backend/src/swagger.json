{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Healthhero App",
    "description": "Healthhero API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:4000",
  "basePath": "/",
  "tags": [
    {
      "name": "User",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/user": {
      "get": {
        "tags": ["User"],
        "summary": "Get a user",
        "properties": {
          "_id": {
            "type": "integer",
            "uniqueItems": true
          },
          "firstName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/testResult": {
      "get": {
        "tags": ["testResult"],
        "summary": "Get user's test results",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/medication": {
      "get": {
        "tags": ["medication"],
        "summary": "Get user's medication",
        "properties": {
          "name": {
            "type": "string"
          },
          "timeScheduled": {
            "type": "string"
          },
          "timeTaken": {
            "type": "string"
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
